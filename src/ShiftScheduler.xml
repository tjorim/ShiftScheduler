<?xml version="1.0" encoding="utf-8"?>
<widget id="asml.shiftscheduler.ShiftScheduler" pluginWidget="true" needsEntityContext="true"
    offlineCapable="true"
    supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Shift Scheduler</name>
    <description>A scheduler widget made for people working in shifts</description>
    <icon />
    <properties>
        <propertyGroup caption="Data">
            <property key="engineers" type="datasource" isList="true" required="true">
                <caption>People</caption>
                <description>Data source for people from SPUser entity</description>
            </property>
            <property key="shifts" type="datasource" isList="true" required="false">
                <caption>Calendar Events</caption>
                <description>Data source for schedule assignments from CalendarEvents entity</description>
            </property>
            <property key="filters" type="datasource" isList="true" required="false">
                <caption>Filters</caption>
                <description>Data source for Filter entities to control team/lane visibility</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Person Attributes">
            <property key="nameAttribute" type="attribute" required="false" dataSource="engineers">
                <caption>Name Attribute</caption>
                <description>Person name attribute (SPUser.name or username)</description>
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="headerAttribute" type="attribute" required="false" dataSource="engineers">
                <caption>Header Grouping</caption>
                <description>Primary grouping attribute (e.g., Team name from association display value)</description>
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="subheaderAttribute" type="attribute" required="false"
                dataSource="engineers">
                <caption>Subheader Grouping</caption>
                <description>Secondary grouping attribute (e.g., Lane name from association display value)</description>
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
        </propertyGroup>
        <propertyGroup caption="Development">
            <property key="showDebugInfo" type="boolean" required="true" defaultValue="false">
                <caption>Show Debug Info</caption>
                <description>Display debug information panel for development and troubleshooting</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Shift Attributes">
            <property key="dayTypeAttribute" type="attribute" required="false" dataSource="shifts">
                <caption>Day Type</caption>
                <description>CalendarEvents.DayType (M/E/N/D/H/T)</description>
                <attributeTypes>
                    <attributeType name="Enum" />
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="eventTypeAttribute" type="attribute" required="false" dataSource="shifts">
                <caption>Event Type</caption>
                <description>CalendarEvents.EventType</description>
                <attributeTypes>
                    <attributeType name="Enum" />
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="statusAttribute" type="attribute" required="false" dataSource="shifts">
                <caption>Status</caption>
                <description>CalendarEvents.Status</description>
                <attributeTypes>
                    <attributeType name="Enum" />
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="spUserAssociation" type="association" required="false"
                dataSource="shifts" selectableObjects="spUserDatasource">
                <caption>Person Association</caption>
                <description>Association from CalendarEvents to SPUser (Person)</description>
                <associationTypes>
                    <associationType name="Reference" />
                </associationTypes>
            </property>
            <property key="spUserDatasource" type="datasource" isList="true" required="false">
                <caption>People Selectable Objects</caption>
                <description>Datasource for selectable SPUser (Person) objects</description>
            </property>
            <property key="shiftAssociation" type="association" required="false" dataSource="shifts"
                selectableObjects="shiftDatasource">
                <caption>Shift Association</caption>
                <description>Association from CalendarEvents to CalendarEvents_Shift</description>
                <associationTypes>
                    <associationType name="Reference" />
                </associationTypes>
            </property>
            <property key="shiftDatasource" type="datasource" isList="true" required="false">
                <caption>Shift Selectable Objects</caption>
                <description>Datasource for selectable CalendarEvents_Shift objects</description>
            </property>
            <property key="shiftDateAttribute" type="attribute" required="false"
                dataSource="shiftDatasource">
                <caption>Shift Date</caption>
                <description>CalendarEvents_Shift/Shift/Date attribute</description>
                <attributeTypes>
                    <attributeType name="DateTime" />
                </attributeTypes>
            </property>
        </propertyGroup>
        <propertyGroup caption="Filter Associations">
            <property key="filterTeamAssociation" type="association" required="false"
                dataSource="filters" selectableObjects="teamDatasource">
                <caption>Filter Team Association</caption>
                <description>Association from Filter to Team entities</description>
                <associationTypes>
                    <associationType name="Reference" />
                    <associationType name="ReferenceSet" />
                </associationTypes>
            </property>
            <property key="teamDatasource" type="datasource" isList="true" required="false">
                <caption>Team Selectable Objects</caption>
                <description>Datasource for selectable Team objects</description>
            </property>
            <property key="filterLaneAssociation" type="association" required="false"
                dataSource="filters" selectableObjects="laneDatasource">
                <caption>Filter Lane Association</caption>
                <description>Association from Filter to Lane entities</description>
                <associationTypes>
                    <associationType name="Reference" />
                    <associationType name="ReferenceSet" />
                </associationTypes>
            </property>
            <property key="laneDatasource" type="datasource" isList="true" required="false">
                <caption>Lane Selectable Objects</caption>
                <description>Datasource for selectable Lane objects</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Actions">
            <propertyGroup caption="Context Attributes">
                <property key="contextShiftId" type="attribute" required="false">
                    <caption>Context Event ID</caption>
                    <description>Attribute to store the currently selected event ID for microflow actions</description>
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
                <property key="contextEngineerId" type="attribute" required="false">
                    <caption>Context Person ID</caption>
                    <description>Attribute to store the currently selected person ID for microflow actions</description>
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
                <property key="contextDate" type="attribute" required="false">
                    <caption>Context Date</caption>
                    <description>Attribute to store the currently selected date for microflow actions</description>
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
                <property key="contextSelectedCells" type="attribute" required="false">
                    <caption>Context Selected Cells</caption>
                    <description>Attribute to store selected cells JSON for batch operations</description>
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
            </propertyGroup>
            <propertyGroup caption="Single Event Operations">
                <property key="onEditShift" type="action" required="false">
                    <caption>On Edit Event</caption>
                    <description>Action to execute when editing an existing event (double-click or context menu edit)</description>
                </property>
                <property key="onCreateShift" type="action" required="false">
                    <caption>On Create Event</caption>
                    <description>Action to execute when creating a new event (double-click empty cell or context menu)</description>
                </property>
                <property key="onDeleteShift" type="action" required="false">
                    <caption>On Delete Event</caption>
                    <description>Action to execute when deleting an event from context menu</description>
                </property>
            </propertyGroup>
            <propertyGroup caption="Batch Operations">
                <property key="onBatchCreate" type="action" required="false">
                    <caption>On Batch Create</caption>
                    <description>Action to execute when batch creating shifts for multiple selected empty cells</description>
                </property>
                <property key="onBatchEdit" type="action" required="false">
                    <caption>On Batch Edit</caption>
                    <description>Action to execute when batch editing multiple selected shifts</description>
                </property>
                <property key="onBatchDelete" type="action" required="false">
                    <caption>On Batch Delete</caption>
                    <description>Action to execute when batch deleting multiple selected shifts</description>
                </property>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>